  <!-- Axeptio SDK -->
  <script>
    // Param√®tres Axeptio : remplace par ton clientId r√©el
    window.axeptioSettings = {
      clientId: "6880d227f0b041d2ff94a814",
    };
  </script>
  <script src="https://static.axept.io/sdk.js" async></script>

  <script>
    // Injection dynamique du tracking HubSpot selon consentement Axeptio
    let trackingInjected = false; // √©vite double injection

    function injectHubspotTrackingScript() {
      if (trackingInjected) return;
      trackingInjected = true;
      const d = document;
      if (d.getElementById('hs-script-loader')) return;
      const script = d.createElement('script');
      script.id = 'hs-script-loader';
      script.async = true;
      script.defer = true;
      script.src = '//js.hs-scripts.com/49153213.js';
      d.head.appendChild(script);
      document.getElementById('tracking-status').textContent = 'Tracking HubSpot activ√© üü¢';
      console.log('Tracking HubSpot charg√©');
    }

    window.addEventListener('axeptio_ready', function () {
      if (!window.axeptioSDK) {
        console.warn('Axeptio SDK non trouv√©');
        return;
      }

      // V√©rifier consentement d√©j√† donn√© au chargement
      let choices = axeptioSDK.getChoices();
      if (choices && choices['hubspot'] === true) {
        injectHubspotTrackingScript();
      }

      // √âcouter les changements √©ventuels du consentement
      axeptioSDK.on('cookies:complete', function (updatedChoices) {
        if (updatedChoices['hubspot'] === true) {
          injectHubspotTrackingScript();
        }
      });
    });
  </script>

  <script>
    // Soumission du formulaire vers API HubSpot Forms v3
    document.getElementById('custom-hs-form').addEventListener('submit', async function (event) {
      event.preventDefault();

      const form = event.target;
      if (!form.checkValidity()) {
        // Pour afficher les messages du navigateur pour les champs requis
        form.reportValidity();
        return;
      }

      // R√©cup√©rer les donn√©es du formulaire
      const formData = new FormData(form);

      const dataToSend = {
        fields: [
          { name: 'firstname', value: formData.get('firstname') },
          { name: 'lastname', value: formData.get('lastname') },
          { name: 'email', value: formData.get('email') }
        ],
        legalConsentOptions: {
          consent: {
            consentToProcess: true,
            text: "En soumettant ce formulaire, j‚Äôaccepte le traitement de mes donn√©es par Nostrum Care conform√©ment √† la politique de confidentialit√©."
          }
        }
      };

      // URL d'API HubSpot - renseigne tes propres IDs
      const portalId = "49153213";
      const formId = "1262a4d1-1496-4553-b70d-64bc1e676047";
      const apiUrl = `https://api.hsforms.com/submissions/v3/integration/submit/${portalId}/${formId}`;

      try {
        const response = await fetch(apiUrl, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(dataToSend)
        });

        if (response.ok) {
          alert('Formulaire soumis avec succ√®s ! Merci.');
          form.reset();
        } else {
          alert('Une erreur est survenue lors de la soumission. Merci de r√©essayer.');
          console.error('Erreur API HubSpot:', await response.text());
        }
      } catch (error) {
        alert('Impossible de soumettre le formulaire. V√©rifiez votre connexion.');
        console.error('Erreur soumission formulaire:', error);
      }
    });
  </script>

